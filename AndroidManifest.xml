<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.kniffenwebdesign.roku"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".RokuApplication">
        <activity
            android:label="@string/app_name"
            android:name=".ui.main.RokuActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ui.ChannelsActivity" 
            android:label="@string/title_channel_activity">   
        </activity>
        <activity 
            android:name=".ui.PreferencesActivity" 
            android:label="@string/title_preferences_activity">   
        </activity>
    </application>

</manifest>